include head 
body
    include navbar
    //- if(errors)
        each error in errors 
                    .alert.alert-danger.alert-dismissible.fade.show.mt-3#alert-js(role='alert')
                        p.text-success= error.msg
                        button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
    if(active)                    
      form(method="post"  style='width: 35%;').mx-auto.my-3

        h1.text-center Sign UP 
        .d-flex(style='justify-content: space-around; width: 90%; margin-left: 5%;')
            .mb-3.mx-1
                input.form-control.p-3.w-100(type='text' name='username' placeholder='Name' required)  
            .mb-3.mx-1
                input.form-control.p-3.kw-100(type='text' name='lastname'  placeholder='Last Name' required)
        .mb-3(style='width: 90%; margin-left: 5%;')   
            input.form-control.p-3(type='email' name='email'  placeholder='Email address' required)
        .mb-3(style='width: 90%; margin-left: 5%;')
            input.form-control.p-3(type='text' name='login'  placeholder='Login' required)
        .mb-3(style='width: 90%; margin-left: 5%;')
            input.form-control.p-3(type='text' name='password' placeholder='Password' required)
        .mb-3(style='width: 90%; margin-left: 5%;')
            input.form-control.p-3(type='text' name='password2'  placeholder='Return Password' required)
        .d-flex.mb-3 
            button.btn.btn-outline-danger.mx-2.w-50 
                a.nav-link(href="/signin") Sign IN
            button.btn.btn-success.mx-2.w-50(type='submit') Submit
        
    else 
        form(method="post"  style=' width: 35%;').mx-auto.my-5

            h1.text-center.mb-5 Sign In
            .error(style="background: red") 
                p(style="margin: 5px 20px")= error
            .d-flex(style='justify-content: space-around; width: 90%; margin-left: 5%;')
            .mb-3(style='width: 90%; margin-left: 5%;')   
                input.form-control.p-3(type='text' name='login'  placeholder='Login')
            .mb-3(style='width: 90%; margin-left: 5%;')
                input.form-control.p-3(type='password' name='password' placeholder='Password')
            .d-flex.mb-3 
                button.btn.btn-outline-danger.mx-2.w-50 
                    a.nav-link(href="/signup") Sign Up
                button.btn.btn-success.mx-2.w-50(type='submit') Submit

